<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<AnchorPane stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mailservice.clientside.Controller.ComposeController">
    <children>
        <VBox spacing="10.0" style="-fx-padding: 10;">
            <Label contentDisplay="RIGHT" style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Recipient:" />
            <TextField fx:id="RecipientFieldID" prefWidth="874.0" promptText="Recipient@Domain" style="-fx-font-size: 13px; -fx-background-radius: 5px; -fx-border-radius: 5px;" />

            <Label contentDisplay="RIGHT" style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Subject:" />
            <TextField fx:id="ObjectFieldID" prefHeight="30.0" prefWidth="827.0" style="-fx-font-size: 13px; -fx-background-radius: 5px; -fx-border-radius: 5px;" />

            <Label style="-fx-font-size: 13px; -fx-font-weight: bold;" text="Body:" />
            <HTMLEditor fx:id="MailBodyID" prefHeight="500.0" prefWidth="870.0" VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="10.0">
                <Button fx:id="CancelFieldButton" onAction="#onCancelFieldButtonClick" styleClass="button-secondary" text="Cancel" />
                <Button fx:id="SendMailButton" onAction="#onSendMailButtonClick" styleClass="button-primary" text="Send" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
