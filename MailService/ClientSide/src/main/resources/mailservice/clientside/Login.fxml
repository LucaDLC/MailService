<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="164.0" maxWidth="425.0" minWidth="425.0" prefHeight="164.0" prefWidth="425.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mailservice.clientside.Controller.LoginController">

    <!-- Contenitore StackPane per centrare tutto -->
    <StackPane AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
        <!-- Contenitore orizzontale (HBox) per il layout -->
        <HBox spacing="10" alignment="CENTER" >

            <!-- TextField per l'username -->
            <TextField fx:id="LoginFieldID" prefHeight="35" prefWidth="200" promptText="User">
                <font>
                    <Font size="14" />
                </font>
                <cursor>
                    <Cursor fx:constant="TEXT" />
                </cursor>
            </TextField>

            <!-- Label per il dominio -->
            <Label text="\@rama.it" prefHeight="17" prefWidth="72">
                <font>
                    <Font size="15.0" />
                </font>
            </Label>

            <!-- Bottone di login -->
            <Button fx:id="LoginButton" prefHeight="50" prefWidth="100" text="Login" textFill="#FFFFFF" onAction="#onLoginButtonAction" onMouseClicked="#onLoginButtonClick">
                <font>
                    <Font size="16.0" />
                </font>
                <cursor>
                    <Cursor fx:constant="HAND" />
                </cursor>
            </Button>
        </HBox>
    </StackPane>

    <!-- Messaggi di successo o errore -->
    <TextFlow fx:id="dangerAlert" visible="false" textAlignment="CENTER" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
    </TextFlow>

    <TextFlow fx:id="successAlert" visible="false" textAlignment="CENTER" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">
    </TextFlow>
</AnchorPane>
