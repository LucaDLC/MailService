<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.web.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mailservice.clientside.Controller.MainController">
   <top>
      <HBox spacing="10.0" alignment="CENTER_LEFT" style="-fx-background-color: #2E3B4E; -fx-padding: 10px;">
         <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@logo.png" />
         </ImageView>
         <Label text="Welcome:" style="-fx-text-fill: white; -fx-font-size: 18px;" />
         <Label fx:id="MailLabel" text="perz@rama.it" style="-fx-text-fill: white; -fx-font-size: 18px;" />
      </HBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3">
         <!-- Sinistra -->
         <VBox spacing="10.0" alignment="CENTER" style="-fx-padding: 10px;">
            <Button fx:id="ComposeButton" text="Compose" styleClass="button-primary" prefHeight="40.0" prefWidth="150.0" onAction="#onComposeButtonClick" />
            <ListView fx:id="MailList" style="-fx-background-color: #FFFFFF; -fx-border-color: #E0E0E0;" />
            <HBox spacing="10.0" alignment="CENTER" style="-fx-padding: 10px;">
               <Button fx:id="DeleteButton" text="Delete" styleClass="button-danger" prefWidth="100.0" onAction="#onDeleteButtonClick" />
               <Button fx:id="ForwardButton" text="Forward" styleClass="button-primary" prefWidth="100.0" onAction="#onForwardButtonClick" />
               <Button fx:id="ReplyButton" text="Reply" styleClass="button-primary" prefWidth="100.0" onAction="#onReplyButtonClick" />
            </HBox>
         </VBox>
         <!-- Destra -->
         <VBox spacing="10.0" style="-fx-padding: 10px;">
            <GridPane hgap="10.0" vgap="10.0">
               <Label text="From:" />
               <Label fx:id="SenderLabel" text="Sender" GridPane.columnIndex="1" />
               <Label text="To:" GridPane.rowIndex="1" />
               <Label fx:id="ReceiverLabel" text="Receiver" GridPane.columnIndex="1" GridPane.rowIndex="1" />
               <Label text="Object:" GridPane.rowIndex="2" />
               <Label fx:id="ObjectLabel" text="Subject" GridPane.columnIndex="1" GridPane.rowIndex="2" />
               <Label text="Date:" GridPane.rowIndex="3" />
               <Label fx:id="DateLabel" text="Date" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            </GridPane>
            <WebView fx:id="MailContent" prefHeight="400.0" />
            <TextFlow fx:id="dangerAlert" visible="false" style="-fx-background-color: #FFCDD2; -fx-padding: 5px; -fx-border-color: #D32F2F; -fx-border-radius: 5px;">
               <Text fx:id="dangerAlertText" text="Error message goes here." style="-fx-fill: #D32F2F;" />
            </TextFlow>
            <TextFlow fx:id="successAlert" visible="false" style="-fx-background-color: #C8E6C9; -fx-padding: 5px; -fx-border-color: #388E3C; -fx-border-radius: 5px;">
               <Text fx:id="successAlertText" text="Success message goes here." style="-fx-fill: #388E3C;" />
            </TextFlow>
         </VBox>
      </SplitPane>
   </center>
</BorderPane>
