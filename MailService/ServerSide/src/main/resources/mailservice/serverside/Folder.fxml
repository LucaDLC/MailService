<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="171.0" maxWidth="469.0" minWidth="299.0" prefHeight="171.0" prefWidth="469.0" stylesheets="@server.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mailservice.serverside.Controller.FolderController">
    <!-- Contenitore StackPane per centrare tutto -->
    <StackPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <children>
         <HBox alignment="TOP_RIGHT">
            <children>
               <ListView fx:id="folderListId" prefHeight="171.0" prefWidth="186.0">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor></ListView>
                  <VBox alignment="CENTER" prefHeight="171.0" prefWidth="345.0" spacing="20">
                      <children>
                          <!-- TextField per l'username -->
                          <TextField fx:id="FolderFieldID" maxWidth="-Infinity" prefHeight="35" prefWidth="259.0" promptText="FolderName">
                              <font>
                                  <Font size="14" />
                              </font>
                              <cursor>
                                  <Cursor fx:constant="TEXT" />
                              </cursor>
                          </TextField>
      
                          <!-- HBox per i bottoni con spaziatura maggiore -->
                          <HBox alignment="CENTER" spacing="30">
                              <!-- Bottone di Creazione Cartella -->
                              <Button fx:id="FolderButton" onMouseClicked="#onFolderButtonClick" prefHeight="50" prefWidth="100.0" text="New" textFill="#4f8625">
                                  <font>
                                      <Font size="16.0" />
                                  </font>
                                  <cursor>
                                      <Cursor fx:constant="HAND" />
                                  </cursor>
                              </Button>
                              <!-- Bottone di Eliminazione Cartella -->
                              <Button fx:id="DeleteFolderButton" minWidth="96.0" onMouseClicked="#onDeleteFolderButtonClick" prefHeight="50" prefWidth="96.0" text="Delete" textFill="#853825">
                                  <font>
                                      <Font size="16.0" />
                                  </font>
                                  <cursor>
                                      <Cursor fx:constant="HAND" />
                                  </cursor>
                              </Button>
                          </HBox>
                      </children>
                  </VBox>
            </children>
         </HBox>
        </children>
    </StackPane>

    <!-- Messaggi di successo o errore -->
    <TextFlow fx:id="dangerAlert" layoutX="190.0" prefHeight="15.0" prefWidth="259.0" textAlignment="CENTER" visible="false" AnchorPane.bottomAnchor="9.0" AnchorPane.leftAnchor="190.0" AnchorPane.rightAnchor="20">
    </TextFlow>

    <TextFlow fx:id="successAlert" layoutX="190.0" prefHeight="15.0" prefWidth="259.0" textAlignment="CENTER" visible="false" AnchorPane.bottomAnchor="9.0" AnchorPane.leftAnchor="190.0" AnchorPane.rightAnchor="20">
    </TextFlow>
</AnchorPane>
